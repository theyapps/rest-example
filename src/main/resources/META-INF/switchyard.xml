<?xml version="1.0" encoding="UTF-8"?>
<sy:switchyard xmlns:bean="urn:switchyard-component-bean:config:2.0" xmlns:resteasy="urn:switchyard-component-resteasy:config:2.0" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" xmlns:sql="urn:switchyard-component-camel-sql:config:2.0" xmlns:sy="urn:switchyard-config:switchyard:2.0" name="rest-example" targetNamespace="urn:com.theyapps:rest-example:1.0">
  <sca:composite name="rest-example" targetNamespace="urn:com.theyapps:rest-example:1.0">
    <sca:component name="PhoneBookServiceBean">
      <bean:implementation.bean class="com.theyapps.rest_example.PhoneBookServiceBean"/>
      <sca:service name="PhoneBookService">
        <sca:interface.java interface="com.theyapps.rest_example.PhoneBookService"/>
      </sca:service>
      <sca:reference name="DBInsertService">
        <sca:interface.java interface="com.theyapps.rest_example.DBService"/>
      </sca:reference>
      <sca:reference name="DBDeleteService">
        <sca:interface.java interface="com.theyapps.rest_example.DBService"/>
      </sca:reference>
    </sca:component>
    <sca:service name="PhoneBookRestService" promote="PhoneBookServiceBean/PhoneBookService">
      <sca:interface.java interface="com.theyapps.rest_example.PhoneBookService"/>
      <resteasy:binding.rest name="PhonebookRestInterface">
        <resteasy:interfaces>com.theyapps.rest_example.PhoneBookResource</resteasy:interfaces>
        <resteasy:contextPath>app</resteasy:contextPath>
      </resteasy:binding.rest>
      <sql:binding.sql name="SqlReadAll" initialDelay="0" period="10000">
        <sy:operationSelector operationName="consume"/>
        <sql:query>SELECT * FROM phonebook;</sql:query>
        <sql:dataSourceRef>java:jboss/datasources/PhonebookDS</sql:dataSourceRef>
      </sql:binding.sql>
    </sca:service>
    <sca:reference name="DBInsertService" multiplicity="0..1" promote="PhoneBookServiceBean/DBInsertService">
      <sca:interface.java interface="com.theyapps.rest_example.DBService"/>
      <sql:binding.sql name="InsertSql">
        <sql:query>INSERT INTO phonebook(firstname, lastname, phonenumber,id) VALUES (#,#,#,#);</sql:query>
        <sql:dataSourceRef>java:jboss/datasources/PhonebookDS</sql:dataSourceRef>
      </sql:binding.sql>
    </sca:reference>
    <sca:reference name="DBDeleteService" multiplicity="0..1" promote="PhoneBookServiceBean/DBDeleteService">
      <sca:interface.java interface="com.theyapps.rest_example.DBService"/>
      <sql:binding.sql name="DeleteSql">
        <sql:query>DELETE FROM phonebook WHERE firstname = # AND lastname = # AND phonenumber= # AND id = #</sql:query>
        <sql:dataSourceRef>java:jboss/datasources/PhonebookDS</sql:dataSourceRef>
      </sql:binding.sql>
    </sca:reference>
  </sca:composite>
</sy:switchyard>